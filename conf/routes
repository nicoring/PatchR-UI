# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home Page
GET         /                         controllers.Application.index()

# Get Patches
# GET         /patches/:rdfObject       controllers.Application.getPatch()
GET         /patches                  controllers.Application.getAllPatches()

# Update and insert Patches
POST        /update/:rdfObject        controllers.Application.updatePatch(rdfObject: String)
POST        /insert                   controllers.Application.insertPatch()

# Map the JS resource paths
GET         /*file                    controllers.Assets.at(path="/public", file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
