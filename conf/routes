# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Get Patches
# GET         /patches/:rdfObject       controllers.Application.getPatch()
GET         /patches                  controllers.Application.getAllPatches()

# Update and insert Patches
POST        /update/:rdfObject        controllers.Application.updatePatch(rdfObject: String)
POST        /insert                   controllers.Application.insertPatch()

# Extract the page parameter from the path, or fix the value for /
GET         /                         controllers.Application.show(page = "about")
GET         /:page                    controllers.Application.show(page: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
